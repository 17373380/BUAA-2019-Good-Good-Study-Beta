.page-section{
  margin-bottom: 20rpx;
}

.button_confirm{
  background-color: #0387FE;
  display: flex;
  justify-content: center;
  position: relative;
  color: white;
  border-radius: 50rpx;
  margin-top: 10rpx;
}

.conformFont{
 /* position: absolute;*/
