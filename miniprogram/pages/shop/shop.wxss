}

.wordsAbovePics {
  display: flex;
  flex-direction: row;
  align-content: center;
  position: relative;
}

.showWhatToSearch{
  display: flex;
  flex-direction: row;
  font-size: medium;
  margin: 10rpx;
}

.refresh {
  display: flex;
  flex-direction: row;
  font-size: medium;
  color: #0387FE;
