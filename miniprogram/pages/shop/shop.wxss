  margin: 10rpx;
  right: 0;
}

.refreshIcon {
  margin-top: 7rpx;
}

.line{
  background: #E0E3DA;
  width: 100%;
  height: 5rpx;
}

.image_search{
  width: 100px;
  height: 100px;
  border:none;
}

.image_coin{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  margin-top: auto;
  left: 0;
  border: none;
}

.userDetail {
  display:flex;
  flex-direction: row;
  margin-left:20rpx;
  margin-right: 20rpx;
  margin-top:20rpx;
  margin-bottom: 20rpx;
}

.userDetailCell {
  display:flex;
  flex-direction: column;
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.userDetailText {
  font-size: small;
}

.usermotto {
  margin-top: 200px;
}

.picShowList {
  display: flex;
  flex-direction: column;
  padding:10rpx;
  background-color: white;
  max-height: fit-content;
}

.picShowRow {
  display:flex;
  flex-direction: row;
  margin: 20rpx;
}

.searchInputConfirm {
  display: flex;
  flex-direction: row;
  margin:20rpx;
}


/*input/search*/
.hh-search-around {
  background-color:lightgray;
  line-height: 64rpx;
  height: 64rpx;
  font-size: 24rpx;
  color: var(--black);
  flex: 1;
  display: flex;
  align-items: center;
  margin: 0 30rpx;
  border-radius: 5000rpx;
  box-sizing: border-box;
  padding: 30rpx;
  width: 500rpx;
}

.input {
  height: 2.58823529em;
  min-height: 2.58823529em;
  line-height: 2.58823529em;
  width: 500rpx;
  background-color: white;
  border: 3rpx solid #D9D9D9;
}
.buttonImage {
  padding: 0;
  margin:10rpx;
  width: 220rpx;
  height: 220rpx;
  align-items: center;
  justify-content: center;
  background-color: white;
  border-radius: 20rpx;
}
.buttonImage::after {
  border: none;
}

.cline {
  background: #E0E3DA;
  width: 5rpx;
  height: 50rpx;
}

.fixedMovable {
  position: fixed;
}

.hotTagsList {
  display: flex;
  flex-direction: column;
  background-color: white;
}

.hotTagsList_row {
  display: flex;
  flex-direction: row;
}

.hotTagsList_cell {
  width:50%;
  height: 60rpx;
}

.hotTagsText {
  display: flex;
  justify-content: center;
  align-items: center;
}

.hot_icon_title {
  display: flex;
}