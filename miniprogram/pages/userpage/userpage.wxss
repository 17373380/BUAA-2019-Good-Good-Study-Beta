/* miniprogram/pages/userpage/userpage.wxss */
@import "../../app.wxss";

.line{
  width:100%;
  height:2rpx;
  background:#777777;
}

.swiper-tab{  
  width: 100%;  
  border-bottom: 2rpx solid #777777;  
  text-align: center;  
  line-height: 80rpx;}  
.swiper-tab-list{  
  font-size: 36rpx;  
  display: inline-block;  
  width: 50%; 
  color: #777777;  
}  
.active{ color: #da7c0c;  
  border-bottom: 5rpx solid #da7c0c;}  

.swiper-box{ display: block; height: 100%; width: 100%; overflow: hidden; }  
.swiper-box view{  
  text-align: center;  
}  

.content-item{
  width: 33%;
  height: 180rpx;
  background-color: rgb(233, 8, 87, 0);
  align-items: center;
  justify-content: center;
  /* 绝对定位的父级必须要定位 */
}

.content{
  display: flex;
  flex-wrap: wrap;
}

.image_button
{ 
  height: 110%;
  background-color: rgb(16, 75, 163, 0);
  align-items: center;
  justify-content: center;
}

.image_search{
  width: 100%;
  height: 100%;
  border: tomato;
  border-radius: 10%;
}
