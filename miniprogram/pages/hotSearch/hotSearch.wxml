<!--miniprogram/pages/hotSearch/hotSearch.wxml-->


  <view class="hotTagsList">
    <view class="hot_icon_title" style="height:50rpx">
      <image src="../../images/mirror_hotTags.png" style="height:40rpx;width:40rpx;margin:5rpx"></image>
      <text style="font-size:small;font-style:inherit;color:#0387FE;margin-bottom:5rpx">热搜标签</text>
    </view>
    <view class="hotTagsList_row" wx:for='{{(hotTagsList.length+1)/2-1}}' wx:for-index="index">
      <view class="hotTagsList_cell">
        <text class="hotTagsText" data-tag="{{hotTagsList[2*index].tag}}" bindtap="hotTagJump">
          <text style="font-size:small;font-style:oblique;">Top{{2*index+1}}.</text>{{hotTagsList[2*index].tag}}
        </text>
      </view>
      <view class="hotTagsList_cell" wx:if="{{2*index+1<hotTagsList.length}}">
        <text class="hotTagsText" data-tag="{{hotTagsList[2*index+1].tag}}" bindtap="hotTagJump">
          <text style="font-size:small;font-style:oblique;">Top{{2*index+2}}.</text>{{hotTagsList[2*index+1].tag}}
        </text>
      </view>
    </view>
  </view>
