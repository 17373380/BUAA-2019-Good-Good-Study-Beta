/* miniprogram/pages/aboutExp/aboutExp.wxss */
@import "../../app.wxss";


.userinfo {
  display:flex;
  flex-direction:row;
  flex: none;
  padding: 40px 0 0;
}

.userHead {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin-left: 20rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  padding-left: 20rpx;
  /**color: #aaa;**/
  color: black;
  font-size: medium;
}

.userNameDetail {
  display:flex;
  flex-direction: column;
}

.nameAndCoin {
  display:flex;
  flex-direction: column;
}

.userName {
  margin-left: 20rpx;
  margin-right: 10rpx;
  font-size: 40rpx;

}

.Coin {
  display: flex;
  flex-direction: row;
  /*margin-top: 10rpx;*/
  /**padding: 20rpx;**/
}

.nameExp {
  margin-left: 20rpx;
  display: flex;
  flex-direction: row;
}

.userRank {
  color:rgb(164, 164, 236);
  font-size: 40rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  margin-top: 7rpx;
}

.exp_bar {
  display:flex;
  flex-direction: row;
  margin-top: 10rpx;
  margin-left: 30rpx;
}

.expBar {
  border-top-width: 2rpx;
  border-top-style: solid;
  border-top-color: #E0E3DA;
  border-left-width: 2rpx;
  border-left-style: solid;
  border-left-color: #E0E3DA;
  border-bottom-width: 2rpx;
  border-bottom-style: solid;
  border-bottom-color: #E0E3DA;
  border-top-left-radius: 10%;
  border-bottom-left-radius: 10%;
  margin-top: 10rpx;
  /*background-color:burlywood ;*/
  background-color:rgb(164, 164, 236);
}

.expBar_bg {
  border-top-width: 2rpx;
  border-top-style: solid;
  border-top-color: #E0E3DA;
  border-right-width: 2rpx;
  border-right-style: solid;
  border-right-color: #E0E3DA;
  border-bottom-width: 2rpx;
  border-bottom-style: solid;
  border-bottom-color: #E0E3DA;
  border-top-right-radius: 10%;
  border-bottom-right-radius: 10%;
  margin-top: 10rpx;
  background-color: white;
}

.expFont {
  font-size: small;
  color: rgb(164, 164, 236) ;
  margin-left: 10rpx;
  margin-top: 8rpx;
}

.page__hd {
  padding: 0 30rpx 40rpx;
}

.kind-list-item {
  margin: 5rpx 0;
  background-color: #FFFFFF;
  border-radius: 4rpx;
  overflow: hidden;
}

.head {
  display: flex;
  align-items: center;
  justify-content: center;  
  margin-top: 20rpx;
  width: 100%;
}

.title {
  font-size: larger;
}

.body {
  display: flex;
  flex-direction: column;
}

.introHead {
  font-size: large;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 30rpx;
}

.introItem {
  margin-left: 20rpx;
}